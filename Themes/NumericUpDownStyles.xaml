    <Style TargetType="{x:Type local:NumericUpDown}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NumericUpDown}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Button
                                x:Name="PART_DecreaseButton"
                                Grid.Column="0"
                                ToolTip="Decrease value">
                                <Viewbox>
                                    <Path
                                        Data="M128 192l128 128 128-128z"
                                        Fill="{TemplateBinding Foreground}"
                                        IsEnabled="True"
                                        Stretch="Uniform"
                                        Stroke="{TemplateBinding BorderBrush}" />
                                </Viewbox>
                            </Button>


                            <Viewbox
                                Grid.Column="1"
                                Stretch="Uniform"
                                StretchDirection="DownOnly">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, UpdateSourceTrigger=PropertyChanged}" />
                            </Viewbox>
                            <Button
                                x:Name="PART_IncreaseButton"
                                Grid.Column="2"
                                ToolTip="Increase value">
                                <Viewbox>
                                    <Path
                                        Data="M128 320l128-128 128 128z"
                                        Fill="{TemplateBinding Foreground}"
                                        IsEnabled="True"
                                        Stretch="Uniform"
                                        Stroke="{TemplateBinding BorderBrush}" />
                                </Viewbox>
                            </Button>

                        </Grid>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
