<Window
    x:Class="Jon.Wpf.CustomControls.Windows.CollectionControlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customcontrols="clr-namespace:Jon.Wpf.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jon.Wpf.CustomControls.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="485"
    Height="400"
    MinWidth="450"
    MinHeight="400"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <customcontrols:CollectionControl x:Name="CollectionControlMain" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="5"
                Click="Button_Click_1"
                Content="Cancel" />
            <Button
                Width="80"
                Margin="5"
                Click="Button_Click"
                Content="Ok" />
        </StackPanel>
    </Grid>
</Window>
